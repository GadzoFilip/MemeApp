<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_add_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="#AAFFFFFF"
        android:text="Add Top Text" />

    <EditText
        android:id="@+id/et_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:textColorHint="#AAFFFFFF"
        android:textColor="#AAFFFFFF"
        android:hint="Top Text"
        android:backgroundTint="@android:color/white"
        android:inputType="textPersonName"
        android:minHeight="48dp"
         />

    <TextView
        android:id="@+id/tv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#AAFFFFFF"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Add Image" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:onClick="access"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_add_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#AAFFFFFF"
            android:text="Add Bottom Text" />

        <EditText
            android:id="@+id/et_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#AAFFFFFF"
            android:textColorHint="#AAFFFFFF"
            android:backgroundTint="@android:color/white"
            android:hint="Bottom Text" />

        <TextView
            android:id="@+id/tv_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#AAFFFFFF"
            android:text="Add Name" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#AAFFFFFF"
            android:textColorHint="#AAFFFFFF"
            android:backgroundTint="@android:color/white"
            android:hint="Name" />

        <TextView
            android:id="@+id/tv_add_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#AAFFFFFF"
            android:text="Add Tag(s)" />

        <EditText
            android:id="@+id/et_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#AAFFFFFF"
            android:textColorHint="#AAFFFFFF"
            android:backgroundTint="@android:color/white"
            android:hint="Tag(s)" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_toggle_favorites"
        style="@style/Widget.MaterialComponents.ActionBar.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:text="Add to List" />
</LinearLayout>
</ScrollView>